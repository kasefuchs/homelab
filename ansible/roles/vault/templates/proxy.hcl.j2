vault {
  address = "https://active.vault.service.consul:8200"

  ca_cert     = "/etc/vault.d/certificates/ca.pem"
  client_key  = "/etc/vault.d/certificates/client.key"
  client_cert = "/etc/vault.d/certificates/client.pem"
}

listener "tcp" {
  address = "{{ nebula_ip | ansible.utils.ipaddr('address') }}:8100"

  tls_key_file  = "/etc/vault.d/certificates/proxy.key"
  tls_cert_file = "/etc/vault.d/certificates/proxy.pem"
}
