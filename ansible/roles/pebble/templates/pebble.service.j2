{{ common_managed_header | ansible.builtin.comment }}
[Unit]
Description=Pebble: Service manager
Wants=network.target network-online.target
After=network.target network-online.target

[Service]
Type=notify
NotifyAccess=main

User=root
Group=root

ExecStart={{ pebble_install_binary_file }} run --http={{ pebble_config_http_listen_address }}
ExecReload=/bin/kill -HUP $MAINPID

Environment=PEBBLE={{ pebble_config_state_dir }}

KillMode=process
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
