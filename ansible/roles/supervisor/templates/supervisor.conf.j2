[supervisord]
logfile={{ supervisor_log_file }}
logfile_maxbytes={{ supervisor_log_max_bytes }}
childlogdir={{ supervisor_log_dir }}
pidfile={{ supervisor_pid_path }}
nodaemon=true

[supervisorctl]
serverurl=unix://{{ supervisor_sock_path }}

[rpcinterface:supervisor]
supervisor.rpcinterface_factory = supervisor.rpcinterface:make_main_rpcinterface

[unix_http_server]
file={{ supervisor_sock_path }}

[include]
files={{ (supervisor_include_dir, '*.conf') | ansible.builtin.path_join }}
